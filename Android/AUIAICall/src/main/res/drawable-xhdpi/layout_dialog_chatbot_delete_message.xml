<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
<item>
    <shape android:shape="rectangle">
        <solid android:color="#3A3D48" /> <!-- 背景颜色 -->
        <corners android:radius="4dp" /> <!-- 圆角半径 -->
    </shape>
</item>
    <item
        android:bottom="5dp"
        android:left="-6dp"
        android:right="-6dp">
        <rotate
            android:fromDegrees="45"
            android:pivotX="50%"
            android:pivotY="0%">
            <shape android:shape="rectangle">
                <solid android:color="#3A3D48"/> <!-- 尖角颜色，应与背景一致 -->
                <size
                    android:width="12dp"
                    android:height="12dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>