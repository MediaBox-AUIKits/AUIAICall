<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 选中状态 -->
    <item android:state_selected="true">
        <shape>
            <gradient
                android:startColor="@color/color_bg_elevated"
                android:endColor="@color/color_bg_elevated_transparent"
                android:angle="90" />

        </shape>
    </item>

    <!-- 默认状态 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/color_bg_elevated" />
            <stroke android:width="1dp" android:color="@color/color_border_tertiary" />
        </shape>
    </item>
</selector>
