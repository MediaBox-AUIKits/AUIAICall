<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<!-- 选中状态 -->
<item android:state_selected="true">
    <shape android:shape="rectangle">
        <solid android:color="@color/color_fill_secondary" />
        <stroke android:width="1dp" android:color="@color/color_border_selection" />
        <corners android:radius="2dp" />
    </shape>
</item>
<!-- 未选中状态 -->
<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/color_fill_secondary" />
        <stroke android:width="1dp" android:color="@color/color_border_secondary" />
        <corners android:radius="2dp" />
    </shape>
</item>
</selector>
