<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg"
    android:clickable="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".AUIAIChatInChatActivity">

    <!-- 装饰线 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <include layout="@layout/layout_base_vertical_lines_decoration" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginHorizontal="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_aicall_in_call_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/tv_ai_call_title"
            style="@style/text_style_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chat_bot"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/chatbot_connect_status"
            style="@style/layout_base_text_style_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/layout_base_red"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_debug"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Debug"
            android:gravity="center"
            style="@style/text_style_16"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_setting"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/btn_setting"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="10dp"
            android:src="@drawable/ic_setting"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_chat_message_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        app:layout_constraintBottom_toTopOf="@+id/bottom_sheet">
        <com.scwang.smart.refresh.layout.SmartRefreshLayout
            android:id="@+id/srl_chat_message_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <com.scwang.smart.refresh.header.ClassicsHeader
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/chatbot_message_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="true"
                />

            <com.scwang.smart.refresh.footer.ClassicsFooter
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 底部栏 -->
    <LinearLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_rectangle_aichat_bottom_sheet"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <View
            android:id="@+id/bottom_sheet_handle"
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/bg_bottom_sheet_handle" />

        <TextView
            android:id="@+id/bottom_press_voice_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/chat_bot_press_to_talk_title"
            style="@style/text_style_tertiary_14"
            android:paddingVertical="15dp"
            android:textAlignment="center"
            android:layout_marginBottom="8dp"
            android:visibility="gone"/>

        <LinearLayout
            android:id="@+id/bottom_input_text_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/bg_rounded_rectangle_chat_input"
            android:layout_marginHorizontal="20dp">

            <ImageView
                android:id="@+id/ic_bottom_add_more_image"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_base_add_alt"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center_vertical"
                android:visibility="visible"/>

            <!-- 语音动画 文本输入框 按住说话提示 -->
            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:layout_gravity="center_vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bottom_press_voice_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/bottom_press_voice_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:layout_marginHorizontal="15dp"
                        style="@style/text_style_identical_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- 语音动画 -->
                    <ImageView
                        android:id="@+id/chatbot_speech_animation_view"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_chatbot_voice_push"
                        android:scaleType="centerInside"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <!-- 文本输入框 -->
                <EditText
                    android:id="@+id/editTextMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="12dp"
                    android:hint="@string/chat_bot_input_tips"
                    android:textColor="@color/color_text"
                    android:textColorHint="@color/color_text_tertiary"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:maxLines="4"
                    android:background="@android:color/transparent"
                    android:scrollbars="vertical"
                    android:scrollHorizontally="false"
                    android:layout_gravity="center_vertical|start"
                    android:visibility="visible" />

                <!-- 按住说话提示 -->
                <com.aliyun.auikits.aicall.widget.VoiceInputEditText
                    android:id="@+id/press_to_push"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="center_vertical"
                    android:text="@string/chat_bot_press_to_talk"
                    android:textColor="@color/color_text"
                    android:gravity="center"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:focusable="false"
                    android:focusableInTouchMode="false"
                    android:clickable="true"
                    android:visibility="gone" />
            </FrameLayout>

            <ImageView
                android:id="@+id/chatbot_action_img"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chatbot_push_voice"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="bottom"
                android:visibility="gone"/>

            <ImageView
                android:id="@+id/ic_bottom_voice_press"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_microphone_open"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="12dp"
                android:layout_gravity="bottom"
                android:visibility="visible"/>

        </LinearLayout>

        <include
            layout="@layout/layout_auiaichat_in_chat_more_action"
            android:id="@+id/bottom_down_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:visibility="gone" />

        <!-- AI生成提示 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:layout_marginVertical="8dp"
            android:gravity="center">
            <TextView
                android:id="@+id/generate_by_ai_text"
                style="@style/text_style_disabled_11"
                android:text="@string/content_generate_by_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
