<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/action_layer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <LinearLayout
        android:id="@+id/btn_mute_call"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_speaker"
        android:layout_marginStart="20dp"
        android:orientation="vertical"
        android:gravity="bottom|center" >
        <ImageView
            android:id="@+id/iv_mute_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_microphone_on" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_speaker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_mute_call"
        app:layout_constraintEnd_toStartOf="@+id/btn_stop_call"
        android:gravity="bottom|center">
        <ImageView
            android:id="@+id/iv_speaker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_speaker_on"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_stop_call"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_speaker"
        app:layout_constraintEnd_toStartOf="@+id/btn_camera"
        android:gravity="bottom|center"
        >
        <ImageView
            android:id="@+id/iv_stop_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_stop_call"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_camera"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_stop_call"
        app:layout_constraintEnd_toStartOf="@id/btn_camera_direction"
        android:gravity="bottom|center">
        <ImageView
            android:id="@+id/iv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_enable"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_camera_direction"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_camera"
        android:gravity="bottom|center">
        <ImageView
            android:id="@+id/iv_camera_direction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera_direction" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
