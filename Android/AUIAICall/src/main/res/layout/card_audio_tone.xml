<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/ll_audio_tone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="20dp"
        android:background="@drawable/bg_card_audio_tone_selector">

        <ImageView
            android:id="@+id/iv_audio_tone"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_audio_tone_3" />

        <TextView
            android:id="@+id/tv_audio_tone_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="test"
            android:paddingStart="12dp"
            style="@style/text_style_secondary_14"
            android:layout_gravity="center_vertical"
            />

        <ImageView
            android:id="@+id/iv_audio_tone_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_checkmark_filled"
            android:paddingHorizontal="15dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_audio_tone_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/audio_tone_selector"
            style="@style/text_style_14"
            android:layout_gravity="center_vertical"
            android:paddingHorizontal="12dp"
            android:paddingVertical="2dp"
            android:visibility="visible"
            />

    </LinearLayout>

</androidx.cardview.widget.CardView>
