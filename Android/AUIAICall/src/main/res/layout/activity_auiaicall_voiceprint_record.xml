<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/color_bg"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".AUIAICallVoicePrintRecordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="20dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_aicall_in_call_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <TextView
            android:id="@+id/title"
            app:layout_constraintLeft_toRightOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/text_style_16"
            android:text="@string/voiceprint_info_tipe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_aicall_close"
            android:layout_gravity="center_vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ll_voiceprint_record_backimg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="36dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_bar"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="169dp"
            android:layout_height="169dp"
            android:src="@drawable/ic_voiceprint_record_backimg"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_audio_video_sound_line"
            android:layout_gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/ll_voiceprint_info_tipe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/ll_voiceprint_record_backimg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_push_to_record"
        android:layout_gravity="center"
        >
        <TextView
            android:id="@+id/tv_voiceprint_info_tipe_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voiceprint_info_tipe_desc"
            style="@style/text_style_14"
            android:textSize="14sp"
            android:layout_marginTop="82dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_voiceprint_record_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voiceprint_record_time_desc"
            style="@style/text_style_14"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/tv_read_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voiceprint_read_tips"
            style="@style/text_style_14"
            android:textSize="14sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            />
        
        <ImageView
            android:id="@+id/iv_voiceprint_uploading"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_voiceprint_uploading"
            android:layout_gravity="center"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_push_to_recognizing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voiceprint_push_to_recognizing"
            style="@style/layout_base_text_style_16"
            android:textSize="14sp"
            android:layout_marginTop="60dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/btn_push_to_record"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <ImageView
            android:id="@+id/iv_push_to_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_microphone_idle"/>
        <TextView
            android:id="@+id/tv_push_to_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            style="@style/text_style_tertiary_12"
            android:text="@string/voiceprint_push_to_record"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>