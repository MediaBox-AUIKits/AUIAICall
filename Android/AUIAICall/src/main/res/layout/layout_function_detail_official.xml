<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layer_function_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="20dp"
    android:background="@android:color/transparent" >

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_function_detail_call_type"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:tabMode="scrollable"
        app:tabGravity="fill"
        android:background="@android:color/transparent"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        app:tabPaddingStart="0dp"
        app:tabPaddingEnd="20dp"
        app:tabMinWidth="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:tabTextAppearance="@style/text_style_14"
        app:tabIndicatorColor="@color/color_text"
        app:tabIndicatorFullWidth="false"
        app:tabIndicatorHeight="0dp"
        app:tabRippleColor="@android:color/transparent"
        app:tabBackground="@android:color/transparent"/>

    <ImageView
        android:id="@+id/iv_ai_agent_text"
        android:layout_width="240dp"
        android:layout_height="54dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="-15dp"
        android:src="@drawable/ic_ai_agent_text"
        app:layout_constraintTop_toBottomOf="@+id/tab_function_detail_call_type"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_function_detail_agent_info_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:translationY="-27dp"
        android:background="@color/color_bg"
        app:layout_constraintTop_toBottomOf="@id/iv_ai_agent_text"
        app:layout_constraintBottom_toTopOf="@+id/layout_function_detail_agent_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="20dp">

            <include
                android:id="@+id/include_vertical_lines"
                layout="@layout/layout_base_vertical_lines_decoration"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <FrameLayout
            android:id="@+id/fl_function_detail_agent_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:clipToPadding="false"
            android:paddingStart="60dp"
            android:paddingEnd="0dp"
            android:paddingTop="40dp"
            android:layout_marginStart="20dp" >

            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewpager_function_detail_call_type"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:clipChildren="false"
                android:clipToPadding="false"
                android:overScrollMode="never"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_function_detail_agent_info"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintTop_toBottomOf="@id/layout_function_detail_agent_info_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_agent_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="数字人对话"
            style="@style/text_style_16"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_agent_index" />

        <TextView
            android:id="@+id/tv_agent_index"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="[. 01_08]"
            style="@style/text_style_14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_agent_name" />

        <!-- 智能体介绍 -->
        <TextView
            android:id="@+id/tv_agent_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="通过数字人与AI智能体进行实时对话，提供更自然的交互体验"
            style="@style/text_style_14"
            android:layout_marginTop="8dp"
            android:layout_marginStart="100dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_agent_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
