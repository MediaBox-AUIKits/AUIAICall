<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/transparent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_bg_mask_push_to_talk"
        android:alpha="0.7"/>

    <ImageView
        android:id="@+id/iv_push_to_talk_cancel_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_push_to_talk_cancel_selector"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_push_to_talk_gesture_hint" />

    <TextView
        android:id="@+id/tv_push_to_talk_gesture_hint"
        android:text="@string/push_to_talk_gesture_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/text_style_identical_12"
        android:paddingTop="20dp"
        android:paddingBottom="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/fl_push_to_talk_gesture_container"/>

    <FrameLayout
        android:id="@+id/fl_push_to_talk_gesture_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <View
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginStart="-10dp"
            android:layout_marginEnd="-10dp"
            android:layout_marginBottom="-100dp"
            android:background="@drawable/bg_semicircle"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_audio_spectrum"
            android:layout_gravity="center"
            />

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>