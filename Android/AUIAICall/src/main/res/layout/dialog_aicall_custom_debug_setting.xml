<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/layout_base_background"
    android:layout_marginLeft="30dp"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_debug_send_custom_message_to_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入自定义消息"
        android:textColor="@color/layout_base_red"
        android:textColorHint="@color/layout_base_red"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        />

    <TextView
        android:id="@+id/debug_send_custom_message_to_server"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="发送自定义消息到AppServer"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_debug_update_llm_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="更新LLM提示词"
        android:textColor="@color/layout_base_red"
        android:textColorHint="@color/layout_base_red"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        />
    <TextView
        android:id="@+id/debug_update_llm_prompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toRightOf="@id/tv_reporting_type_function_unavailable"
        app:layout_constraintTop_toTopOf="parent"
        android:text="更新LLM提示词"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <EditText
        android:layout_marginTop="20dp"
        android:id="@+id/et_debug_update_custom_capture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="截帧送检文本"
        android:textColor="@color/layout_base_red"
        android:textColorHint="@color/layout_base_red"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        />

    <TextView
        android:id="@+id/debug_send_single_custom_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reporting_type_function_unavailable"
        android:text="开启单次截帧送检"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <TextView
        android:id="@+id/debug_send_continus_custom_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toRightOf="@id/tv_reporting_type_response_slow"
        app:layout_constraintTop_toBottomOf="@id/tv_reporting_type_function_unavailable"
        android:text="关闭人声开启持续100s截帧送检"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>
    <TextView
        android:id="@+id/debug_send_continus_custom_capture_enable_asr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toRightOf="@id/tv_reporting_type_response_slow"
        app:layout_constraintTop_toBottomOf="@id/tv_reporting_type_function_unavailable"
        android:text="开启人声开启持续100s截帧送检"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <TextView
        android:id="@+id/debug_stop_custom_capture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_reporting_type_response_slow"
        android:text="退出自定义截帧送检"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <TextView
        android:id="@+id/debug_mute_agent_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debug_stop_custom_capture"
        android:text="关闭智能体语音"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <TextView
        android:id="@+id/debug_unmute_agent_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debug_mute_agent_audio"
        android:text="打开智能体语音"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <TextView
        android:id="@+id/debug_send_text_to_agent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/debug_unmute_agent_audio"
        android:text="SendAIAgentText"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/et_debug_vcr_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/debug_send_text_to_agent"
        android:hint="VCR 配置"
        android:textColor="@color/layout_base_red"
        android:textColorHint="@color/layout_base_red"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        />

    <TextView
        android:id="@+id/debug_update_vcr_config"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_debug_vcr_update"
        android:text="UpdateVcrConfig"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

    <EditText
        android:layout_marginTop="5dp"
        android:id="@+id/et_debug_bailian_params_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/debug_update_vcr_config"
        android:hint="更新百炼参数"
        android:textColor="@color/layout_base_red"
        android:textColorHint="@color/layout_base_red"
        android:textSize="14sp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        />

    <TextView
        android:id="@+id/debug_update_update_bailian_params"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/layout_base_text_style_14"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_debug_bailian_params_update"
        android:text="更新百炼参数"
        android:layout_marginTop="5dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="6dp"
        android:background="@drawable/bg_reporting_type_selector"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>