<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layer_fragment_detail_pstn_in_and_out"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_bg">

    <!-- 顶部栏 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/top_bar"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginHorizontal="12dp"
        android:layout_height="44dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="8dp"
            android:paddingVertical="10dp"
            android:src="@drawable/ic_aicall_in_call_back"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/tv_ai_call_title"
            style="@style/text_style_16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/phone_agent_in_call"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/btn_back"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- 呼入界面 -->
    <LinearLayout
        android:id="@+id/ll_in_call_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_pstn_in_called_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:text="@string/pstn_in_called_number"
            style="@style/text_style_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <LinearLayout
            android:id="@+id/ll_pstn_in_call_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/bg_rounded_rectangle_small">

            <EditText
                android:id="@+id/et_pstn_in_called_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                style="@style/text_style_14"
                android:hint="@string/pstn_in_input_number"
                android:layout_weight="1"
                android:textColorHint="@color/color_text_tertiary"
                android:background="@null"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:gravity="start"
                android:inputType="phone" />

            <ImageView
                android:id="@+id/iv_pstn_in_copy"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                android:src="@drawable/ic_pstn_in_call_copy" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="4dp"
            android:layout_weight="0">
            <TextView
                android:id="@+id/tv_pstn_in_called_number_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="@string/pstn_in_called_tips"
                style="@style/layout_base_text_style_14_light_white"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ll_pstn_in_call_input"
                />

            <ImageView
                android:id="@+id/iv_pstn_in_get_number_again"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_pstn_in_get_number_again"
                android:visibility="visible" />
        </LinearLayout>
    </LinearLayout>

    <!-- 呼出界面 -->
    <LinearLayout
        android:id="@+id/ll_out_call_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/top_bar"
        android:visibility="gone">

        <TextView
            android:id="@+id/tv_pstn_out_called_number_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pstn_out_called_number"
            style="@style/text_style_16"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <EditText
            android:id="@+id/et_pstn_out_called_number"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            style="@style/text_style_14"
            android:hint="@string/pstn_out_input_number"
            android:layout_weight="1"
            android:textColorHint="@color/color_text_tertiary"
            android:background="@drawable/bg_rounded_rectangle_small"
            android:padding="10dp"
            android:gravity="start"
            android:inputType="phone"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:id="@+id/tv_pstn_out_called_number_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/pstn_out_called_tips"
            style="@style/text_style_tertiary_14"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/et_pstn_out_called_number" />

        <LinearLayout
            android:id="@+id/ll_pstn_out_interrupt_config"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_pstn_out_called_number_desc">
            <TextView
                android:id="@+id/tv_pstn_out_interrupt_config_title"
                style="@style/text_style_16"
                android:layout_marginVertical="5dp"
                android:text="@string/config_interrupt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/sv_pstn_out_interrupt_config"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:thumb="@drawable/bg_switch_thumb"
                app:track="@drawable/bg_switch_track"
                android:gravity="end"
                android:checked="true"
                android:layout_weight="1"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_border_secondary"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_pstn_out_voice" />


        <LinearLayout
            android:id="@+id/ll_pstn_out_voice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_pstn_out_interrupt_config"
            >
            <TextView
                android:id="@+id/tv_pstn_out_voice_title"
                style="@style/text_style_16"
                android:text="@string/config_audio_tone_title"
                android:layout_marginVertical="5dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                />

            <LinearLayout
                android:id="@+id/ll_pstn_out_voice_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:gravity="end" >
                <TextView
                    android:id="@+id/tv_pstn_out_voice_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/text_style_16"
                    android:text="知小白" />
                <ImageView
                    android:id="@+id/iv_pstn_out_voice_select"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="3dp"
                    android:src="@drawable/ic_pstn_out_select_voice" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color_border_secondary"
            android:elevation="0dp"
            android:outlineProvider="none"
            android:layout_marginTop="14dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_pstn_out_call_notice_info" />

        <LinearLayout
            android:id="@+id/ll_pstn_out_call_notice_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_pstn_out_voice"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="12dp" >

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_pstn_out_notice"
                android:layout_marginTop="2dp" />

            <TextView
                android:id="@+id/tv_pstn_out_call_after_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                style="@style/layout_base_text_style_13_gray"
                android:text="@string/pstn_out_call_after_tips" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_start_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_entrance_selector"
        android:layout_marginHorizontal="20dp"
        android:paddingVertical="10dp"
        android:text="@string/pstn_in_call_entrance_text"
        android:textColor="@color/color_text_disabled"
        android:layout_marginBottom="90dp"
        android:gravity="center"
        android:enabled="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>