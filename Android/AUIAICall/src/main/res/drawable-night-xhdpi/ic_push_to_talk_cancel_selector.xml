<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 禁用状态 -->
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/color_fill_secondary" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/color_border_secondary"/>
                    <size android:width="60dp" android:height="60dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_hang_up" android:gravity="center"/>
        </layer-list>
    </item>

    <!-- 默认状态（正常） -->
    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="oval">
                    <solid android:color="@color/color_error" /> <!-- 红色 -->
                    <size android:width="60dp" android:height="60dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_hang_up" android:gravity="center" />
        </layer-list>
    </item>

</selector>
