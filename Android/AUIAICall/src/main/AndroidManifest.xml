<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.aliyun.auikits.aicall">

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>

    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_MEDIA_PROJECTION" />

    <!-- Android 13 (API级别33）以上 -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application>
        <service android:name="com.alivc.rtc.share.ForegroundService"
            android:enabled="true" />

    </application>

    <application>
        <activity
            android:name=".AUIAICallInCallActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:exported="false" />
        <activity
            android:name=".AUIAICallEntranceActivity"
            android:screenOrientation="portrait"
            android:exported="true" />
        <activity
            android:name=".AUIAIChatInChatActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />
        <activity
            android:name=".AUIAIChatExternalViewActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <activity
            android:name=".AUIAICallInPhoneCallActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <activity
            android:name=".AUIAICallVoicePrintRecordActivity"
            android:screenOrientation="portrait"
            android:launchMode="singleTop"
            android:windowSoftInputMode="adjustResize"
            android:exported="false" />

        <service android:name=".service.ForegroundAliveService" />
    </application>

</manifest>
